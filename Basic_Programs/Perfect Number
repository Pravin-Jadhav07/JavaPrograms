public class Question3 {
    public static void main(String[] args) {
        
        for( int num=1; num<=100 ; num++ ){
            int sum=0;
            for( int i=1 ; i<=num/2 ; i++ ){
                if( num%i == 0 )
                    sum+=i;
            }
            if( sum == num )
                System.out.println(num+" ");

        }
    }
}

// Perfect number is equal to sum of its proper divisors

// eg.  6  
//     factors = 1,2,3
//     1+2+3=6
